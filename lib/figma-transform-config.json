    "layoutAlign": {
      "cssProperty": "align-self",
      "type": "Enum",
      "values": {
        "INHERIT": {
          "css": {
            "align-self": "auto"
          },
          "tailwind": "self-auto",
          "comment": "Inherit from parent"
        },
        "MIN": {
          "css": {
            "align-self": "flex-start"
          },
          "tailwind": "self-start",
          "comment": "Align self to start"
        },
        "CENTER": {
          "css": {
            "align-self": "center"
          },
          "tailwind": "self-center",
          "comment": "Align self to center"
        },
        "MAX": {
          "css": {
            "align-self": "flex-end"
          },
          "tailwind": "self-end",
          "comment": "Align self to end"
        },
        "STRETCH": {
          "css": {
            "align-self": "stretch"
          },
          "tailwind": "self-stretch",
          "comment": "Stretch to fill cross axis"
        }
      }
    }
  },

  "comments": {
    "purpose": "This config externalizes all hardcoded mappings from altnode-transform.ts",
    "usage": "Import this config and use mappings instead of inline object literals",
    "architecture": "Figma JSON → altnode-transform.ts (extraction) → altNode.styles (fallback CSS) → rules (framework-specific optimization)",
    "priority": "Rules always override fallbacks (rules = semantic, fallbacks = raw CSS)",
    "maintenance": "Update this file when Figma API adds new properties or CSS standards change"
  }
}
