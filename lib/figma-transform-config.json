        "SPACE_BETWEEN": {
          "css": {
            "justify-content": "space-between"
          },
          "tailwind": "justify-between",
          "comment": "Space between children"
        }
      }
    },
    "counterAxisAlignItems": {
      "cssProperty": "align-items",
      "type": "Enum",
      "values": {
        "MIN": {
          "css": {
            "align-items": "flex-start"
          },
          "tailwind": "items-start",
          "comment": "Align to start of cross axis"
        },
        "CENTER": {
          "css": {
            "align-items": "center"
          },
          "tailwind": "items-center",
          "comment": "Center on cross axis"
        },
        "MAX": {
          "css": {
            "align-items": "flex-end"
          },
          "tailwind": "items-end",
